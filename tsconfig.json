{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020"],
        "module": "CommonJS",
        "skipLibCheck": true,

        /* Bundler mode */
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "./build",
        "rootDir": "./",
        "esModuleInterop": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    }
}
